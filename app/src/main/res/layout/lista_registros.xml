<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
    <ImageView
        android:id="@+id/iv_Imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        ></ImageView>
    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvNombre"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iv_Imagen"
        android:layout_toEndOf="@+id/iv_Imagen"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/tv_especie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvEspecie"
        android:textSize="15dp"
        android:layout_below="@+id/tv_nombre"
        android:layout_toEndOf="@+id/iv_Imagen"
        android:layout_toRightOf="@+id/iv_Imagen"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>